# ============================================================================
# SIKOPMA - Environment Configuration
# ============================================================================
# Copy this file to .env and configure for your environment
# Generate APP_KEY with: php artisan key:generate

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application name (displayed in UI and emails)
APP_NAME="SIKOPMA"

# Environment: local, staging, production
# IMPORTANT: Set to 'production' in production!
APP_ENV=local

# Application encryption key (generate with: php artisan key:generate)
# CRITICAL: Must be set before deployment!
APP_KEY=

# Debug mode: true for development, false for production
# IMPORTANT: MUST be false in production for security!
APP_DEBUG=true

# Application URL (used for generating links in emails, etc.)
# Example: https://sikopma.example.com
APP_URL=http://localhost

# Application locale and timezone
APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID
APP_TIMEZONE=Asia/Jakarta

# Maintenance mode driver
APP_MAINTENANCE_DRIVER=file

# PHP CLI server workers (for development)
# PHP_CLI_SERVER_WORKERS=4

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================================================
# LOGGING
# ============================================================================

# Log channel: single, daily, slack, syslog, errorlog, stack
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null

# Log level: debug, info, notice, warning, error, critical, alert, emergency
# Use 'warning' or 'error' in production
LOG_LEVEL=debug

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database connection: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql

# MySQL/MariaDB settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sikopma
DB_USERNAME=root
DB_PASSWORD=

# For SQLite (development only):
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session driver: file, cookie, database, memcached, redis, array
# Recommended: database for production
SESSION_DRIVER=database

# Session lifetime in minutes (120 = 2 hours)
SESSION_LIFETIME=120

# Encrypt session data
SESSION_ENCRYPT=false

# Session cookie path and domain
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache driver: file, database, memcached, redis, array
# Recommended: redis for production, database for shared hosting
CACHE_STORE=database

# Cache key prefix (useful for shared cache servers)
# CACHE_PREFIX=sikopma_

# Memcached settings (if using memcached)
MEMCACHED_HOST=127.0.0.1

# Redis settings (if using redis)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

# Queue connection: sync, database, redis, sqs, beanstalkd
# Use 'database' for simple setup, 'redis' for high performance
# Use 'sync' for development (no queue worker needed)
QUEUE_CONNECTION=database

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================

# Mail driver: smtp, sendmail, mailgun, ses, postmark, log
# Use 'log' for development (emails saved to storage/logs)
MAIL_MAILER=log

# SMTP settings (for production)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# Mail from address and name
MAIL_FROM_ADDRESS="noreply@sikopma.example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# FILESYSTEM
# ============================================================================

# Default filesystem disk: local, public, s3
FILESYSTEM_DISK=local

# Broadcasting connection (for real-time features)
BROADCAST_CONNECTION=log

# ============================================================================
# AWS S3 (Optional - for cloud storage)
# ============================================================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# VITE (Frontend Build Tool)
# ============================================================================

VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# PRODUCTION CHECKLIST
# ============================================================================
# Before deploying to production, ensure:
# 1. APP_ENV=production
# 2. APP_DEBUG=false
# 3. APP_KEY is generated and set
# 4. Database credentials are correct
# 5. Mail settings are configured
# 6. QUEUE_CONNECTION is set (database or redis)
# 7. Run: php artisan config:cache
# 8. Run: php artisan route:cache
# 9. Run: php artisan view:cache
# 10. Run: composer install --no-dev --optimize-autoloader
# ============================================================================
